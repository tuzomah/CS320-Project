</body>
<div class="content">
  <div class="chart">
  <h3>Leaderboard</h3>
  <div class="table-data">
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Username</th>
	    <th>Coins</th>
        <th>Complete Games</th>
      </tr>
      <% if (userData.length !== 0) { %>
        <% userData.forEach(function(data, index) { %>
          <tr>
            <td><%= data.id %></td>
            <td><%= data.username %></td>
	        <td><%= data.coins %></td>
            <td><%= data.complete_games %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7">No Data Found</td>
        </tr>
      <% } %>
    </table>
  </div>
  </div>
</div>
